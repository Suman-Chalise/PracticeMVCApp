@model Movies


<form method="post" asp-action="Edit">

    <input type="hidden" asp-for="MovieId" />   @* with the help of this my code didnt create new list and now updating the existing one  *@

    <div class="mb-3">
        <label class="form-label">Movie Name</label>
        <input asp-for="Name" class="form-control">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Movie Genre</label>
        <input asp-for="Genre" class="form-control">
        <span asp-validation-for="Genre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Duration</label>
        <input asp-for="duration" class="form-control">
        <span asp-validation-for="duration" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-controller="Movies" asp-action="Index" class="btn btn-outline-secondary">Back To Index</a>

</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}